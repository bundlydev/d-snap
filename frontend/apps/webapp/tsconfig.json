{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next",
      },
    ],
    "paths": {
      "@app/components/*": ["./src/components/*"],
      "@app/hooks/*": ["./src/hooks/*"],
      "@app/lib/*": ["./src/lib/*"],
      "@app/declarations/*": ["./src/declarations/*"],
    },
  },
  "exclude": ["**/node_modules", "**/.*/*"],
  "include": ["src", "build/types/**/*.ts", ".next/types/**/*.ts"],
}
